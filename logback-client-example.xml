<?xml version="1.0" encoding="UTF-8"?>
<!--
  Este archivo es un EJEMPLO de cómo configurar Logback en el proyecto CLIENTE
  que enviará logs al TCP Log Server.

  Copia este archivo como logback.xml o logback-spring.xml en el directorio
  src/main/resources/ de tu proyecto cliente.
-->
<configuration>

    <!-- Appender para consola local (opcional) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Appender TCP para enviar logs al servidor -->
    <appender name="TCP" class="ch.qos.logback.classic.net.SocketAppender">
        <!-- Host y puerto del TCP Log Server -->
        <remoteHost>localhost</remoteHost>
        <port>9999</port>

        <!-- Reintentar conexión si falla (cada 30 segundos) -->
        <reconnectionDelay>30000</reconnectionDelay>

        <!-- Incluir información del caller (opcional, tiene impacto en performance) -->
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Configuración del logger root -->
    <root level="INFO">
        <!-- Envía logs a la consola local -->
        <appender-ref ref="CONSOLE" />
        <!-- Envía logs al TCP Log Server -->
        <appender-ref ref="TCP" />
    </root>

    <!-- Ejemplo: Logger específico para un paquete -->
    <logger name="com.example.myapp" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="TCP" />
    </logger>

</configuration>
